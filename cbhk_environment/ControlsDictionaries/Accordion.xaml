<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControls="clr-namespace:cbhk_environment.CustomControls">

    <ImageBrush x:Key="PixelArrow" ImageSource="/cbhk_environment;component/resources/common/images/AccordionArrow.png" />

    <ImageBrush x:Key="OrangeButtonNormal" ImageSource="/cbhk_environment;component/resources/common/images/TextToggleButtonNormal.png" />
    <ImageBrush x:Key="OrangeButtonPressed" ImageSource="/cbhk_environment;component/resources/common/images/TextToggleButtonPressed.png" />

    <Style x:Key="ModifyButtonStyle" TargetType="CustomControls:IconButtons">
        <Style.Setters>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Image Source="/cbhk_environment;component/resources/common/images/Edit.png" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style x:Key="ExpanderDownHeaderStyle" TargetType="{x:Type ToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border MinWidth="50" Padding="{TemplateBinding Padding}">
                        <DockPanel
                            x:Name="panel"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Image
                                x:Name="arrow"
                                Width="15"
                                Height="10"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderTransformOrigin="0.5 0.5"
                                Source="/cbhk_environment;component/resources/common/images/AccordionArrow.png" />
                            <DockPanel
                                Margin="5,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Margin="5,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    Foreground="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=TitleForeground}"
                                    Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=Title}"
                                    TextAlignment="Center" />
                                <CustomControls:IconButtons
                                    Width="Auto"
                                    Height="Auto"
                                    Margin="0,0,5,0"
                                    Padding="5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Background="{StaticResource OrangeButtonNormal}"
                                    BorderThickness="1"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=Modify}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}}"
                                    Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=ModifyName}"
                                    Foreground="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=ModifyForeground}"
                                    IconColor="Black"
                                    IconData="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=ModifyIconData}"
                                    IconHeight="10"
                                    IconMargin="3 3 3 5"
                                    IconWidth="10"
                                    PressedBackground="{StaticResource OrangeButtonPressed}"
                                    Style="{DynamicResource IconButtons}"
                                    Visibility="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=ModifyVisibility}" />
                                <CustomControls:IconButtons
                                    Width="Auto"
                                    Height="Auto"
                                    Margin="0,0,5,0"
                                    Padding="5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Background="{StaticResource OrangeButtonNormal}"
                                    BorderThickness="1"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=Fresh}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}}"
                                    Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=FreshName}"
                                    Foreground="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=FreshForeground}"
                                    IconColor="Black"
                                    IconData="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=FreshIconData}"
                                    IconHeight="10"
                                    IconMargin="3 3 3 5"
                                    IconWidth="10"
                                    PressedBackground="{StaticResource OrangeButtonPressed}"
                                    Style="{DynamicResource IconButtons}"
                                    Visibility="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CustomControls:Accordion}, Path=FreshVisibility}" />
                            </DockPanel>
                            <ContentPresenter
                                Margin="4,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"
                                SnapsToDevicePixels="True" />
                        </DockPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="true">
                            <Setter TargetName="arrow" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="180" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="arrow" Property="Source" Value="/cbhk_environment;component/resources/common/images/AccordionArrowHightLight.png" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="arrow" Property="Source" Value="/cbhk_environment;component/resources/common/images/AccordionArrowHightLight.png" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

