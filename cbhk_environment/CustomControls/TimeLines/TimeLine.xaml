<UserControl
    x:Class="cbhk_environment.CustomControls.TimeLines.TimeLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        x:Name="border"
        Width="300"
        Height="150"
        Background="Transparent"
        BorderBrush="{x:Null}"
        BorderThickness="0">
        <ScrollViewer
            Background="Transparent"
            HorizontalScrollBarVisibility="Visible"
            
            VerticalScrollBarVisibility="Hidden">
            <Canvas
                x:Name="mainCanvas"
                Height="200"
                Margin="5,0"
                Background="#1E1E1E"
                MouseLeftButtonDown="SynchronizationTimelineMouseLeftButtonDown" />
        </ScrollViewer>
    </Border>
</UserControl>
