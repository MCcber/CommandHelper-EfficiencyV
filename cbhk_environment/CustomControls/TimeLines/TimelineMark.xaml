<UserControl
    x:Class="cbhk_environment.CustomControls.TimeLines.TimelineMark"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:cbhk_environment.CustomControls.TimeLines"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel>
        <Border
            Padding="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderBrush="#FF404040"
            BorderThickness="1"
            DockPanel.Dock="Top">
            <TextBlock
                x:Name="text"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Transparent"
                FontFamily="Consolas"
                FontSize="10"
                Foreground="White">
                00:00
            </TextBlock>
        </Border>
        <Rectangle
            Width="1"
            Height="6"
            HorizontalAlignment="Left"
            DockPanel.Dock="Bottom"
            Fill="#FF404040" />
    </DockPanel>
</UserControl>
