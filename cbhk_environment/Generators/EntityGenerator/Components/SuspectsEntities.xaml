<UserControl
    x:Class="cbhk_environment.Generators.EntityGenerator.Components.SuspectsEntities"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControls="clr-namespace:cbhk_environment.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:cbhk_environment.Generators.EntityGenerator.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <CustomControls:Accordion
            Title="可疑实体的列表"
            MaxHeight="200"
            Margin="10,2,10,0"
            Background="#FFE5B663"
            Fresh="{Binding ClearSyspectsEntities}"
            FreshForeground="Black"
            FreshName="清空"
            Modify="{Binding AddSuspectsEntities}"
            ModifyForeground="Black"
            ModifyName="添加"
            Style="{DynamicResource AccordionStyle}"
            TitleForeground="Black">
            <ScrollViewer
                MaxHeight="200"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Background="#2F2F2F" />
            </ScrollViewer>
        </CustomControls:Accordion>
    </Grid>
</UserControl>
