<UserControl
    x:Class="CBHK.View.Common.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Container="clr-namespace:CBHK.CustomControl.Container"
    xmlns:CustomControl="clr-namespace:CBHK.CustomControl"
    xmlns:VectorButton="clr-namespace:CBHK.CustomControl.VectorButton"
    xmlns:VectorCheckBox="clr-namespace:CBHK.CustomControl.VectorCheckBox"
    xmlns:VectorComboBox="clr-namespace:CBHK.CustomControl.VectorComboBox"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CBHK.CustomControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:CBHK.Common.Model;assembly=CBHK.Common"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:utility="clr-namespace:CBHK.Utility.Common"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontFamily="{Binding SelectedFontFamily}"
    mc:Ignorable="d">

    <behavior:Interaction.Triggers>
        <behavior:EventTrigger EventName="Loaded">
            <behavior:CallMethodAction MethodName="Settings_Loaded" TargetObject="{Binding}" />
        </behavior:EventTrigger>
    </behavior:Interaction.Triggers>

    <StackPanel Margin="10,5">
        <VectorComboBox:VectorTextComboBox
            Title="启动器可见性"
            Grid.Row="1"
            Grid.Column="1"
            Height="40"
            Margin="0,0,35,5"
            HorizontalAlignment="Stretch"
            ArrowMargin="0 0 10 0"
            DisplayMemberPath="Text"
            ItemsSource="{utility:EnumBinding {x:Type model:LanuchState},
                                              MemberBrushKey=White,
                                              DisplayPanelBrushKey=Black}"
            SelectedItem="{Binding SelectedState}"
            SelectedValue="{Binding SelectedStateString}"
            SelectedValuePath="Text"
            Style="{DynamicResource VectorTextComboBoxStyle}" />
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <VectorComboBox:VectorTextComboBox
                Title="字体"
                Grid.Column="0"
                Height="40"
                VerticalAlignment="Center"
                ArrowMargin="0 0 10 0"
                Foreground="White"
                ItemsSource="{Binding CurrentFontFamilyNameList}"
                SelectedIndex="0"
                SelectedItem="{Binding SelectedFontFamilyItem}"
                Style="{DynamicResource VectorTextComboBoxStyle}" />
            <VectorButton:VectorTextButton
                Grid.Column="2"
                Width="35"
                Height="40"
                VerticalAlignment="Top"
                Background="#D0D1D4"
                OriginBottomHeight="3"
                Style="{StaticResource VectorTextButtonStyle}"
                Text="..." />
        </Grid>
        <VectorComboBox:VectorTextComboBox
            Title="主题类型"
            Grid.Row="2"
            Grid.Column="1"
            Height="40"
            Margin="0,0,0,5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            ArrowMargin="0 0 10 0"
            Background="#D0D1D4"
            Foreground="White"
            ItemsSource="{utility:EnumBinding {x:Type model:WindowThemeType},
                                              DisplayPanelBrushKey=Black,
                                              MemberBrushKey=White}"
            SelectedItem="{Binding SelectedThemeType}"
            SelectedValue="{Binding SelectedThemeTypeString}"
            SelectedValuePath="Text"
            Style="{DynamicResource VectorTextComboBoxStyle}" />
        <VectorComboBox:VectorTextComboBox
            Title="主题特效"
            Grid.Row="1"
            Grid.Column="1"
            Height="40"
            Margin="0,0,0,5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            ArrowMargin="0 0 10 0"
            DisplayMemberPath="Text"
            Foreground="White"
            ItemsSource="{utility:EnumBinding {x:Type model:WindowVisualType},
                                              DisplayPanelBrushKey=Black,
                                              MemberBrushKey=White}"
            SelectedItem="{Binding SelectedVisualType}"
            SelectedValue="{Binding SelectedVisualTypeString}"
            SelectedValuePath="Text"
            Style="{DynamicResource VectorTextComboBoxStyle}" />
        <VectorComboBox:VectorTextComboBox
            Title="窗体边框风格"
            Grid.Row="1"
            Grid.Column="1"
            Height="40"
            Margin="0,0,0,5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            ArrowMargin="0 0 10 0"
            DisplayMemberPath="Text"
            Foreground="White"
            ItemsSource="{utility:EnumBinding {x:Type model:WindowCornerPreference},
                                              DisplayPanelBrushKey=Black,
                                              MemberBrushKey=White}"
            SelectedItem="{Binding SelectedWindowCornerPreferenceType}"
            SelectedValue="{Binding SelectedWindowCornerPreferenceTypeString}"
            SelectedValuePath="Text"
            Style="{DynamicResource VectorTextComboBoxStyle}" />
    </StackPanel>
</UserControl>
