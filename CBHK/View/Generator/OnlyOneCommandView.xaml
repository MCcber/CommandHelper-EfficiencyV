    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0">
            <VectorButton:VectorFlatImageButton
                Command="{Binding ReturnCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Container:VectorWindow}}"
                Image="/Resource/Common/Image/IconArrowLeft.png"
                ImageMargin="5"
                Style="{DynamicResource VectorFlatImageButtonStyle}"
                ToolTipService.BetweenShowDelay="0"
                ToolTipService.InitialShowDelay="0">
                <VectorButton:VectorFlatImageButton.ToolTip>
                    <ToolTip
                        Background="#484848"
                        Content="ESC:返回"
                        Foreground="White" />
                </VectorButton:VectorFlatImageButton.ToolTip>
            </VectorButton:VectorFlatImageButton>
            <VectorButton:VectorFlatImageButton
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Command="{Binding RunCommand}"
                Image="/Resource/Common/Image/IconArrowRight.png"
                ImageMargin="5"
                Style="{DynamicResource VectorFlatImageButtonStyle}"
                ToolTipService.BetweenShowDelay="0"
                ToolTipService.InitialShowDelay="0">
                <VectorButton:VectorFlatImageButton.ToolTip>
                    <ToolTip
                        Background="#484848"
                        Content="F5:运行"
                        Foreground="White" />
                </VectorButton:VectorFlatImageButton.ToolTip>
            </VectorButton:VectorFlatImageButton>
            <VectorButton:VectorTextButton
                MinWidth="60"
                Background="#C6C6C6"
                Command="{Binding AddOneCommandPageCommand}"
                Foreground="Black"
                OriginBottomHeight="3"
                Style="{DynamicResource VectorTextButtonStyle}"
                Text="添加" />
            <VectorButton:VectorTextButton
                MinWidth="60"
                Background="#C6C6C6"
                Command="{Binding ClearCommandPageCommand}"
                Foreground="Black"
                OriginBottomHeight="3"
                Style="{DynamicResource VectorTextButtonStyle}"
                Text="清除" />
            <VectorButton:VectorTextButton
                MinWidth="60"
                Background="#C6C6C6"
                Command="{Binding ImportFormClipBoard}"
                Foreground="Black"
                OriginBottomHeight="3"
                Style="{DynamicResource VectorTextButtonStyle}"
                Text="从剪切板导入" />
            <VectorButton:VectorTextButton
                MinWidth="60"
                Background="#C6C6C6"
                Command="{Binding ImportFromFileCommand}"
                Foreground="Black"
                OriginBottomHeight="3"
                Style="{DynamicResource VectorTextButtonStyle}"
                Text="从文件导入" />
            <VectorButton:VectorToggleIconTextButton
                Foreground="White"
                IsChecked="{Binding ShowGeneratorResult, Mode=OneWayToSource}"
                Style="{DynamicResource VectorToggleIconTextButtonStyle}"
                Text="显示结果" />
            <Input:VectorTextBox
                Margin="2"
                HorizontalAlignment="Stretch"
                VerticalContentAlignment="Center"
                Background="#424242"
                BorderBrush="#424242"
                CaretBrush="White"
                FontSize="15"
                Foreground="White"
                Style="{DynamicResource VectorTextBoxStyle}"
                Text="{Binding SelectedItem.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                WaterMarkerMargin="5 0 0 2"
                WaterMarkerText="当前标记" />
        </DockPanel>
        <TabControl
            Grid.Row="1"
            Grid.Column="0"
            Background="Transparent"
            ItemsSource="{Binding OocTabSource}"
            SelectedIndex="0"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
            Style="{DynamicResource TabControlWithScrollBar}" />
    </Grid>
</Container:VectorWindow>
