<Page
    x:Class="CBHK.View.Component.Datapack.EditPage.EditPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControl="clr-namespace:CBHK.CustomControl"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:localWindow="clr-namespace:CBHK.WindowDictionaries"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="EditPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="#1E1E1E"
    mc:Ignorable="d">

    <behavior:Interaction.Triggers>
        <behavior:EventTrigger EventName="Loaded">
            <behavior:CallMethodAction MethodName="InitData_Loaded" TargetObject="{Binding}" />
        </behavior:EventTrigger>
    </behavior:Interaction.Triggers>

    <Page.Resources>
        <ImageBrush x:Key="BackToHomePage" ImageSource="/CBHK;component/Resource/CBHK/Image/IconHome.png" />
        <ImageBrush x:Key="LeftArrow" ImageSource="/CBHK;component/Resource/Common/Image/IconArrowLeft.png" />
        <ImageBrush x:Key="RightArrow" ImageSource="/CBHK;component/Resource/Common/Image/IconArrowRight.png" />
        <ImageBrush x:Key="EditBox" ImageSource="/CBHK;component/Resource/Common/Image/TextEditBox.png" />
        <ContextMenu
            x:Key="DatapackManagerMenu"
            Background="#424242"
            BorderThickness="0">
            <MenuItem
                Background="#2F2F2F"
                Foreground="White"
                Header="添加">
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="NearestNeighbor"
                        RenderOptions.ClearTypeHint="Enabled"
                        Source="{StaticResource Plus}" />
                </MenuItem.Icon>
                <MenuItem
                    Background="#2F2F2F"
                    Command="{Binding AddItemCommand}"
                    Foreground="White"
                    Header="新建项">
                    <MenuItem.Icon>
                        <Image
                            RenderOptions.BitmapScalingMode="HighQuality"
                            RenderOptions.ClearTypeHint="Enabled"
                            Source="{StaticResource NewFile}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Background="#2F2F2F"
                    Command="{Binding AddExistingItemsCommand}"
                    Foreground="White"
                    Header="现有项">
                    <MenuItem.Icon>
                        <Image
                            RenderOptions.BitmapScalingMode="HighQuality"
                            RenderOptions.ClearTypeHint="Enabled"
                            Source="{StaticResource NewFile}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Background="#2F2F2F"
                    Command="{Binding AddFolderCommand}"
                    Foreground="White"
                    Header="新建文件夹">
                    <MenuItem.Icon>
                        <Image
                            RenderOptions.BitmapScalingMode="HighQuality"
                            RenderOptions.ClearTypeHint="Enabled"
                            Source="{StaticResource NewFolder}" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem
                Background="#2F2F2F"
                Command="{Binding CutCommand}"
                Foreground="White"
                Header="剪切">
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderOptions.ClearTypeHint="Enabled"
                        Source="{StaticResource Cut}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Background="#2F2F2F"
                Command="{Binding CopyCommand}"
                Foreground="White"
                Header="复制">
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderOptions.ClearTypeHint="Enabled"
                        Source="{StaticResource Copy}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Background="#2F2F2F"
                Command="{Binding PasteCommand}"
                Foreground="White"
                Header="粘贴">
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderOptions.ClearTypeHint="Enabled"
                        Source="{StaticResource Paste}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Background="#2F2F2F"
                Command="{Binding CopyFullPathCommand}"
                Foreground="White"
                Header="复制完整路径">
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderOptions.ClearTypeHint="Enabled"
                        Source="{StaticResource Copy}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Background="#2F2F2F"
                Command="{Binding OpenWithResourceManagementCommand}"
                Foreground="White"
                Header="在文件资源管理器中打开">
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderOptions.ClearTypeHint="Enabled"
                        Source="{StaticResource OpenWithFolder}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Background="#2F2F2F"
                Command="{Binding ExcludeFromProjectCommand}"
                Foreground="White"
                Header="从项目中排除">
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderOptions.ClearTypeHint="Enabled"
                        Source="{StaticResource Delete}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Background="#2F2F2F"
                Command="{Binding OpenWithTerminalCommand}"
                Foreground="White"
                Header="在终端中打开">
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderOptions.ClearTypeHint="Enabled"
                        Source="{StaticResource Terminal}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Background="#2F2F2F"
                Command="{Binding DeleteCommand}"
                Foreground="White"
                Header="删除">
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderOptions.ClearTypeHint="Enabled"
                        Source="{StaticResource Delete}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Background="#2F2F2F"
                Command="{Binding AttributeCommand}"
                Foreground="White"
                Header="属性">
                <MenuItem.Icon>
                    <Image
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderOptions.ClearTypeHint="Enabled"
                        Source="{StaticResource Wrench}" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
        <FlowDocument x:Key="WelcomeDocument" LineHeight="10">
            <Paragraph Padding="10,10,0,0" TextAlignment="Left">
                <Run
                    FontSize="20"
                    Foreground="#7160E8"
                    Text="欢迎使用数据包生成器" />
            </Paragraph>
            <Paragraph Foreground="Gray" TextAlignment="Left">
                <Run Text="  上下移动选定行内容" />
