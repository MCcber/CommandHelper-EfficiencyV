    <Grid Panel.ZIndex="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition
                Width="200"
                MinWidth="200"
                MaxWidth="600" />
        </Grid.ColumnDefinitions>
        <CustomControl:IconTextButtons
            Grid.Row="0"
            Grid.Column="0"
            Width="25"
            Height="25"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="{StaticResource BackToHomePage}"
            BorderThickness="0"
            Command="{Binding BackToHomePageCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=localWindow:CommonWindow}}"
            FontSize="15"
            Style="{DynamicResource IconTextButton}"
            ToolTipService.BetweenShowDelay="0"
            ToolTipService.InitialShowDelay="0">
            <CustomControl:IconTextButtons.ToolTip>
                <ToolTip
                    Background="#484848"
                    Content="返回起始页"
                    Foreground="White" />
            </CustomControl:IconTextButtons.ToolTip>
        </CustomControl:IconTextButtons>
        <CustomControl:IconTextButtons
            Grid.Row="0"
            Grid.Column="1"
            Width="25"
            Height="25"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="{StaticResource LeftArrow}"
            BorderThickness="0"
            Command="{Binding ReturnCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=localWindow:CommonWindow}}"
            FontSize="15"
            Style="{DynamicResource IconTextButton}"
            ToolTipService.BetweenShowDelay="0"
            ToolTipService.InitialShowDelay="0">
            <CustomControl:IconTextButtons.ToolTip>
                <ToolTip
                    Background="#484848"
                    Content="ESC:返回主页"
                    Foreground="White" />
            </CustomControl:IconTextButtons.ToolTip>
        </CustomControl:IconTextButtons>
        <Menu
            Grid.Row="0"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Background="Transparent"
            BorderThickness="0">
            <MenuItem
                Padding="15,2"
                VerticalAlignment="Center"
                Background="Transparent"
                Foreground="White"
                Header="文件" />
            <MenuItem
                Padding="15,2"
                VerticalAlignment="Center"
