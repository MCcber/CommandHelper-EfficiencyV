                    Width="40"
                    Height="20"
                    Margin="5,0,0,0"
                    Background="#494949"
                    BorderBrush="#737373"
                    BorderThickness="1"
                    CornerRadius="3">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="#D7D7D7"
                        Text="Alt" />
                </Border>
                <Run Foreground="White" Text="+" />
                <Border
                    Width="40"
                    Height="20"
                    Margin="5,0,0,0"
                    Background="#494949"
                    BorderBrush="#737373"
                    BorderThickness="1"
                    CornerRadius="3">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Foreground="#D7D7D7"
                        Text="↑" />
                </Border>
                <Run Foreground="White" Text="/" />
