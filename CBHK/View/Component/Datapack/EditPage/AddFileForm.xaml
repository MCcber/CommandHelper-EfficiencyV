<localWindow:CommonWindow
    x:Class="CBHK.View.Component.Datapack.EditPage.AddFileForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControl="clr-namespace:CBHK.CustomControl"
    xmlns:Utility="clr-namespace:CBHK.Utility"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CBHK.View.Component.Datapack.EditPage"
    xmlns:localWindow="clr-namespace:CBHK.WindowDictionaries"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="新建项"
    Width="950"
    Height="555"
    MinWidth="950"
    MinHeight="555"
    Background="#1A1A1A"
    ResizeMode="CanResizeWithGrip"
    mc:Ignorable="d">

    <Window.Resources>
        <local:NewItemGridWidthConverter x:Key="NewItemGridWidthConverter" />
        <CollectionViewSource x:Key="NewItemSourceCollection" Source="{Binding NewItemStyles, IsAsync=True}" />
        <ImageBrush x:Key="ButtonNormal" ImageSource="/CBHK;component/Resource/Common/Image/ButtonNormal.png" />
        <ImageBrush x:Key="ButtonPressed" ImageSource="/CBHK;component/Resource/Common/Image/ButtonPressed.png" />
        <ImageBrush x:Key="EditBox" ImageSource="/CBHK;component/Resource/Common/Image/TextEditBox.png" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <TreeView
            x:Name="FileTypeViewer"
            Grid.Row="0"
            Grid.Column="0"
            Background="Transparent"
            BorderThickness="0"
            FontSize="15"
            Style="{DynamicResource TreeViewWithScrollBar}">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="SelectedItemChanged">
                    <behaviors:CallMethodAction MethodName="NewFileType_SelectedItemChanged" TargetObject="{Binding}" />
                </behaviors:EventTrigger>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:CallMethodAction MethodName="NewFileListViewer_Loaded" TargetObject="{Binding}" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            <TreeViewItem
                Foreground="White"
                Header="已安装"
                IsExpanded="True"
                IsSelected="True">
                <TreeViewItem
                    Uid="advancements"
                    Foreground="White"
                    Header="进度" />
                <TreeViewItem
                    Uid="chat_type"
                    Foreground="White"
                    Header="聊天类型" />
                <TreeViewItem
                    Uid="datapacks"
                    Foreground="White"
                    Header="内置数据包" />
                <TreeViewItem
                    Uid="functions"
                    Foreground="White"
                    Header="函数" />
                <TreeViewItem
                    Uid="loot_tables"
                    Foreground="White"
                    Header="战利品表" />
                <TreeViewItem
                    Uid="predicates"
                    Foreground="White"
                    Header="谓词" />
                <TreeViewItem
                    Uid="structures"
                    Foreground="White"
                    Header="结构" />
                <TreeViewItem
                    Uid="recipes"
                    Foreground="White"
                    Header="配方" />
                <TreeViewItem
                    Uid="item_modifiers"
                    Foreground="White"
                    Header="物品修饰器" />
                <TreeViewItem
                    Uid="tags"
                    Foreground="White"
                    Header="标签">
                    <TreeViewItem
                        Uid="tags\blocks"
                        Foreground="White"
                        Header="方块" />
                    <TreeViewItem
                        Uid="tags\entity_types"
                        Foreground="White"
                        Header="实体类型" />
                    <TreeViewItem
                        Uid="tags\items"
                        Foreground="White"
                        Header="物品" />
                    <TreeViewItem
                        Uid="tags\fluids"
                        Foreground="White"
                        Header="流体" />
                    <TreeViewItem
                        Uid="tags\functions"
                        Foreground="White"
                        Header="函数" />
                    <TreeViewItem
                        Uid="tags\game_events"
                        Foreground="White"
                        Header="游戏事件" />
                </TreeViewItem>
                <TreeViewItem
                    Uid="dimension"
                    Foreground="White"
                    Header="维度" />
                <TreeViewItem
                    Uid="dimension_type"
                    Foreground="White"
                    Header="维度类型" />
                <TreeViewItem
                    Uid="worldgen"
                    Foreground="White"
                    Header="自定义世界生成">
                    <TreeViewItem
                        Uid="worldgen\biome"
                        Foreground="White"
                        Header="生物群系" />
                    <TreeViewItem
                        Uid="worldgen\configured_carver"
                        Foreground="White"
                        Header="雕刻器" />
                    <TreeViewItem
                        Uid="worldgen\configured_feature"
                        Foreground="White"
                        Header="地物" />
                    <TreeViewItem
                        Uid="worldgen\density_function"
                        Foreground="White"
                        Header="密度函数" />
                    <TreeViewItem
                        Uid="worldgen\flat_level_generator_preset"
                        Foreground="White"
                        Header="超平坦预设" />
                    <TreeViewItem
                        Uid="worldgen\noise"
                        Foreground="White"
                        Header="噪声" />
                    <TreeViewItem
                        Uid="worldgen\noise_settings"
                        Foreground="White"
                        Header="噪声设置" />
                    <TreeViewItem
                        Uid="worldgen\placed_feature"
                        Foreground="White"
                        Header="可放置地物" />
                    <TreeViewItem
                        Uid="worldgen\processor_list"
                        Foreground="White"
                        Header="处理器列表" />
                    <TreeViewItem
                        Uid="worldgen\structure"
                        Foreground="White"
                        Header="结构" />
                    <TreeViewItem
                        Uid="worldgen\structure_set"
                        Foreground="White"
                        Header="结构集" />
                    <TreeViewItem
                        Uid="worldgen\template_pool"
                        Foreground="White"
                        Header="模板池" />
                    <TreeViewItem
                        Uid="worldgen\world_preset"
                        Foreground="White"
                        Header="世界预设" />
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>
        <DockPanel
            Grid.Row="0"
            Grid.Column="1"
            LastChildFill="False">
            <TextBlock
                Margin="5,8,0,0"
                Foreground="White"
                Text="排序依据:" />
            <ComboBox
                x:Name="SortBy"
                Grid.Row="0"
                Grid.Column="1"
                Width="100"
                Height="20"
                Margin="10,5,0,0"
                VerticalAlignment="Top"
                Foreground="White"
                ItemsSource="{Binding SortBySource}"
                SelectedIndex="0"
                Style="{DynamicResource TextComboBoxStyle}" />
        </DockPanel>
        <ListView
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,30,0,5"
            Background="Gray"
            BorderThickness="0"
            ItemsSource="{Binding Source={StaticResource NewItemSourceCollection}, IsAsync=True}"
            SelectedItem="{Binding SelectedNewFile, Mode=TwoWay}"
            Style="{DynamicResource ListBoxScrollViewerStyle}">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:CallMethodAction MethodName="NewFileViewer_Loaded" TargetObject="{Binding}" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource NewItemGridWidthConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="45" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image
                            Grid.Column="0"
                            Width="20"
                            Height="20"
                            Margin="5,0"
                            HorizontalAlignment="Left"
                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                            Source="{Binding Icon, IsAsync=True, Mode=OneTime}" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="25"
                            Foreground="White"
                            Text="{Binding FunctionName, IsAsync=True, Mode=OneTime}"
                            TextTrimming="WordEllipsis" />
                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="White"
                            Text="{Binding TypeName, IsAsync=True, Mode=OneTime}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel
                        Background="Transparent"
                        VirtualizingPanel.CacheLength="200 200"
                        VirtualizingPanel.CacheLengthUnit="Pixel"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.ScrollUnit="Pixel" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <TextBox
            Grid.Row="0"
            Grid.Column="2"
            Height="25"
            Margin="0,5,5,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="#424242"
            CaretBrush="White"
            FontSize="15"
            Foreground="White"
            Text="{Binding SearchText, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}">
            <TextBox.Resources>
                <VisualBrush
                    x:Key="BackgroundBrush"
                    AlignmentX="Left"
                    AlignmentY="Center"
                    Stretch="UniformToFill">
                    <VisualBrush.Visual>
                        <Grid
                            Width="{Binding RelativeSource={RelativeSource AncestorType=TextBox}, Path=ActualWidth}"
                            Height="{Binding RelativeSource={RelativeSource AncestorType=TextBox}, Path=ActualHeight}"
                            Background="#383838">
                            <TextBlock
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                FontSize="12"
                                Foreground="#D6D6D6"
                                Text="搜索"
                                TextAlignment="Center" />
                        </Grid>
                    </VisualBrush.Visual>
                </VisualBrush>
            </TextBox.Resources>
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Background" Value="{StaticResource EditBox}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border
                                    x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    SnapsToDevicePixels="True">
                                    <ScrollViewer
                                        x:Name="PART_ContentHost"
                                        Focusable="False"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="BorderBrush" Value="#424242" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#424242" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Margin="5,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="White"
            Text="类型:"
            TextWrapping="WrapWithOverflow" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Margin="40,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="White"
            Text="{Binding SelectedTypeText, Mode=OneWay}"
            TextWrapping="WrapWithOverflow" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Margin="5,75,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="White"
            Text="{Binding SelectedDescriptionText, Mode=OneWay}"
            TextWrapping="WrapWithOverflow" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="White"
            Text="文件名" />
        <TextBox
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Height="25"
            Margin="50,0,120,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            FontSize="15"
            Foreground="White"
            Text="{Binding NewFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <DockPanel
            Grid.Row="2"
            Grid.Column="3"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <CustomControl:TextButtons
                Padding="20,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="{StaticResource ButtonNormal}"
                BorderBrush="Black"
                Command="{Binding ClickTrueCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                Content="确定"
                MouseLeftDownBackground="{StaticResource ButtonPressed}"
                MouseOverBackground="{StaticResource ButtonNormal}"
                Style="{DynamicResource TextButtonsStyle}" />
            <CustomControl:TextButtons
                Margin="5,0,0,0"
                Padding="20,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="{StaticResource ButtonNormal}"
                BorderBrush="Black"
                Command="{Binding ClickFalseCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                Content="取消"
                MouseLeftDownBackground="{StaticResource ButtonPressed}"
                MouseOverBackground="{StaticResource ButtonNormal}"
                Style="{DynamicResource TextButtonsStyle}" />
        </DockPanel>
    </Grid>
</localWindow:CommonWindow>
