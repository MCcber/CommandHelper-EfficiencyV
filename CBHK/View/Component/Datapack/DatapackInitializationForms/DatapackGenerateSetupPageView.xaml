<Page
    x:Class="CBHK.View.Component.Datapack.DatapackInitializationForms.DatapackGenerateSetupPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControl="clr-namespace:CBHK.CustomControl"
    xmlns:VectorButton="clr-namespace:CBHK.CustomControl.VectorButton"
    xmlns:VectorComboBox="clr-namespace:CBHK.CustomControl.VectorComboBox"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CBHK.View.Component.Datapack.DatapackInitializationForms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="DatapackGenerateSetupPage"
    d:DesignHeight="630"
    d:DesignWidth="900"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Page.Resources>
        <ImageBrush x:Key="ButtonNormal" ImageSource="/CBHK;component/Resource/Common/Image/ButtonNormal.png" />
        <ImageBrush x:Key="ButtonPressed" ImageSource="/CBHK;component/Resource/Common/Image/ButtonPressed.png" />
    </Page.Resources>

    <Grid Margin="30,10,30,0" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,10"
            FontSize="20"
            Foreground="White"
            Text="配置新数据包" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="15"
            Foreground="White"
            Text="解决方案名称" />
        <Viewbox
            Grid.Row="1"
            Grid.Column="0"
            Width="15"
            Height="15"
            Margin="100,0,20,0"
            HorizontalAlignment="Left"
            ToolTipService.BetweenShowDelay="0"
            ToolTipService.InitialShowDelay="0">
            <Viewbox.ToolTip>
                <ToolTip
                    Background="#424242"
                    Content="解决方案是一个或多个数据包的容器"
                    Foreground="White" />
            </Viewbox.ToolTip>
            <Path Data="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM216 336h24V272H216c-13.3 0-24-10.7-24-24s10.7-24 24-24h48c13.3 0 24 10.7 24 24v88h8c13.3 0 24 10.7 24 24s-10.7 24-24 24H216c-13.3 0-24-10.7-24-24s10.7-24 24-24zm40-208a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" Fill="#70DAFF" />
        </Viewbox>
        <TextBox
            Grid.Row="2"
            Grid.Column="0"
            Height="25"
            Margin="0,5,0,5"
            HorizontalAlignment="Stretch"
            BorderBrush="Black"
            BorderThickness="1"
            CaretBrush="White"
            Foreground="White"
            Text="{Binding SolutionName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Viewbox
            Grid.Row="2"
            Grid.Column="1"
            Width="15"
            Height="15"
            Margin="5,0"
            HorizontalAlignment="Left"
            Visibility="{Binding SolutionNameIsNull, Mode=OneWay}">
            <Path Data="M256 512c141.4 0 256-114.6 256-256S397.4 0 256 0S0 114.6 0 256S114.6 512 256 512zm0-384c13.3 0 24 10.7 24 24V264c0 13.3-10.7 24-24 24s-24-10.7-24-24V152c0-13.3 10.7-24 24-24zm32 224c0 17.7-14.3 32-32 32s-32-14.3-32-32s14.3-32 32-32s32 14.3 32 32z" Fill="#FFFF7C7C" />
        </Viewbox>
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Margin="25,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Foreground="#FF99A4"
            Text="为空或名称无效"
            Visibility="{Binding SolutionNameIsNull, Mode=OneWay}" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,0,20,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="15"
            Foreground="White"
            Text="位置" />
        <VectorComboBox:VectorTextComboBox
            Title="位置"
            Grid.Row="4"
            Grid.Column="0"
            ArrowMargin="0 15 0 0"
            Background="#D0D1D4"
            Foreground="White"
            IsReadOnly="True"
            ItemsSource="{Binding GeneratorPathList, Mode=TwoWay}"
            SelectedIndex="0"
            SelectedItem="{Binding SelectedSolutionPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Style="{DynamicResource VectorTextComboBoxStyle}" />
        <VectorButton:VectorTextButton
            Grid.Row="4"
            Grid.Column="1"
            Width="50"
            Height="30"
            Margin="5,0,0,0"
            HorizontalAlignment="Left"
            Background="#D0D1D4"
            Command="{Binding SetSolutionPathCommand}"
            Foreground="Black"
            OriginBottomHeight="3"
            Style="{DynamicResource VectorTextButtonStyle}"
            Text="..." />
        <TextBlock
            Grid.Row="5"
            Margin="0,5,20,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="15"
            Foreground="White"
            Text="简介" />
        <TextBox
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="25"
            Margin="0,5,280,10"
            HorizontalAlignment="Stretch"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            FontSize="12"
            Foreground="White"
            Text="{Binding Description, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" />
        <DockPanel
            Grid.Row="7"
            Grid.Column="1"
            Height="40"
            Margin="0,0,0,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            LastChildFill="False">
            <VectorButton:VectorTextButton
                Width="92"
                Height="32"
                Background="#D0D1D4"
                Command="{Binding AttributeLastStepCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                Foreground="Black"
                OriginBottomHeight="3"
                Style="{DynamicResource VectorTextButtonStyle}"
                Text="上一步" />
            <VectorButton:VectorTextButton
                Width="92"
                Height="32"
                Margin="6,0,0,0"
                Background="#D0D1D4"
                Command="{Binding AttributeNextStepCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                Foreground="Black"
                OriginBottomHeight="3"
                Style="{DynamicResource VectorTextButtonStyle}"
                Text="下一步" />
        </DockPanel>
    </Grid>
</Page>
