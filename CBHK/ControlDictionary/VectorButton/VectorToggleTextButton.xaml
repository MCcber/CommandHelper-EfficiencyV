<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControl="clr-namespace:CBHK.CustomControl.VectorButton">
    <Style x:Key="VectorToggleTextButton" TargetType="{x:Type CustomControl:VectorToggleTextButton}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CustomControl:VectorToggleTextButton}">
                    <Border
                        x:Name="templateRoot"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding RoundBorderBrush}"
                        BorderThickness="2">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2.5" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2.5" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="2.5" />
                                <RowDefinition x:Name="extraBottomLine" Height="6" />
                            </Grid.RowDefinitions>
                            <Rectangle
                                Grid.Row="0"
                                Grid.Column="0"
                                Fill="{TemplateBinding TopBorderBrush}"
                                IsHitTestVisible="False" />
                            <Rectangle
                                Grid.Row="0"
                                Grid.Column="1"
                                Fill="{TemplateBinding TopBorderBrush}"
                                IsHitTestVisible="False" />
                            <Rectangle
                                Grid.Row="0"
                                Grid.Column="2"
                                Fill="{TemplateBinding BorderCornerBrush}"
                                IsHitTestVisible="False" />
                            <Rectangle
                                Grid.Row="1"
                                Grid.Column="0"
                                Fill="{TemplateBinding TopBorderBrush}"
                                IsHitTestVisible="False" />
                            <Rectangle
                                Grid.Row="1"
                                Grid.Column="2"
                                Fill="{TemplateBinding TopBorderBrush}"
                                IsHitTestVisible="False" />
                            <Rectangle
                                Grid.Row="2"
                                Grid.Column="0"
                                Fill="{TemplateBinding BorderCornerBrush}"
                                IsHitTestVisible="False" />
                            <Rectangle
                                Grid.Row="2"
                                Grid.Column="1"
                                Fill="{TemplateBinding TopBorderBrush}"
                                IsHitTestVisible="False" />
                            <Rectangle
                                Grid.Row="2"
                                Grid.Column="2"
                                Fill="{TemplateBinding TopBorderBrush}"
                                IsHitTestVisible="False" />
                            <Rectangle
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Width="50"
                                Height="2.5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Fill="{TemplateBinding CheckedMarkerBrush}"
                                IsHitTestVisible="False"
                                Visibility="{TemplateBinding IsShowCheckedMarker}" />
                            <Rectangle
                                Grid.Row="3"
                                Grid.ColumnSpan="3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Fill="{TemplateBinding OriginBottomBrush}"
                                IsHitTestVisible="False"
                                Stroke="{TemplateBinding OriginBottomBrush}"
                                StrokeThickness="0" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Foreground="{TemplateBinding Foreground}"
                                IsHitTestVisible="False"
                                Text="{TemplateBinding Text}"
                                TextAlignment="Center" />
                            <ContentPresenter
                                x:Name="contentPresenter"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                RecognizesAccessKey="True"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers />
    </Style>
</ResourceDictionary>