                                    <Rectangle
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Fill="#6D6D6E"
                                        IsHitTestVisible="False" />
                                    <Rectangle
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Fill="#7B7B7C"
