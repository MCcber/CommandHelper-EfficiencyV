                                    <Rectangle
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Fill="#5A5B5C"
                                        IsHitTestVisible="False" />
                                    <Rectangle
                                        Grid.Row="2"
                                        Grid.Column="0"
