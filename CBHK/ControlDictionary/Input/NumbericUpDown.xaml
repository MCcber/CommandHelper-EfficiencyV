<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Input="clr-namespace:CBHK.CustomControl.Input"
    xmlns:VectorButton="clr-namespace:CBHK.CustomControl.VectorButton"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors">

    <Style x:Key="NumbericUpDownStyle" TargetType="{x:Type Input:NumbericUpDown}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Input:NumbericUpDown}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Input:VectorTextBox
                                Grid.RowSpan="2"
                                Grid.Column="0"
                                Padding="2,0,0,0"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Background="#313233"
                                BorderBrush="#242425"
                                Foreground="{TemplateBinding Foreground}"
                                LocateLineBrush="{TemplateBinding LocateLineBrush}"
                                Style="{DynamicResource VectorTextBoxStyle}"
                                Text="{TemplateBinding Text}"
                                WaterMarkerBrush="{TemplateBinding WaterMarkerBrush}"
                                WaterMarkerMargin="{TemplateBinding WaterMarkerMargin}"
                                WaterMarkerText="{TemplateBinding WaterMarkerText}">
                                <behaviors:Interaction.Triggers>
                                    <behaviors:EventTrigger EventName="TextChanged">
                                        <behaviors:CallMethodAction MethodName="OnTextChanged" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                    </behaviors:EventTrigger>
                                </behaviors:Interaction.Triggers>
                            </Input:VectorTextBox>
                            <VectorButton:VectorIconRepeatButton
                                Grid.Row="0"
                                Grid.Column="1"
                                Background="{TemplateBinding Background}"
                                IconAngle="180"
                                IconBrush="Black"
                                OriginBottomHeight="3"
                                Style="{DynamicResource VectorIconRepeatButtonStyle}">
                                <behaviors:Interaction.Triggers>
                                    <behaviors:EventTrigger EventName="Click">
                                        <behaviors:CallMethodAction MethodName="OnIncrease_Click" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                    </behaviors:EventTrigger>
                                </behaviors:Interaction.Triggers>
                            </VectorButton:VectorIconRepeatButton>
                            <VectorButton:VectorIconRepeatButton
                                Grid.Row="1"
                                Grid.Column="1"
                                Background="{TemplateBinding Background}"
                                IconBrush="Black"
                                OriginBottomHeight="3"
                                Style="{DynamicResource VectorIconRepeatButtonStyle}">
                                <behaviors:Interaction.Triggers>
                                    <behaviors:EventTrigger EventName="Click">
                                        <behaviors:CallMethodAction MethodName="OnDecrease_Click" TargetObject="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                    </behaviors:EventTrigger>
                                </behaviors:Interaction.Triggers>
                            </VectorButton:VectorIconRepeatButton>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>