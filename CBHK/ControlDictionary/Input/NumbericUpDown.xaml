<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Input="clr-namespace:CBHK.CustomControl.Input"
    xmlns:VectorButton="clr-namespace:CBHK.CustomControl.VectorButton">
    <Style x:Key="NumbericUpDownStyle" TargetType="{x:Type Input:NumbericUpDown}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Input:NumbericUpDown}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                Grid.RowSpan="2"
                                Grid.Column="0"
                                Background="#313233"
                                BorderBrush="#242425"
                                Text="{TemplateBinding Text}" />
                            <VectorButton:VectorIconRepeatButton
                                Grid.Row="0"
                                Grid.Column="1"
                                Command="{TemplateBinding IncreaseCommand}"
                                Style="{DynamicResource VectorIconRepeatButtonStyle}" />
                            <VectorButton:VectorIconRepeatButton
                                Grid.Row="1"
                                Grid.Column="1"
                                Command="{TemplateBinding DecreaseCommand}"
                                Style="{DynamicResource VectorIconRepeatButtonStyle}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>