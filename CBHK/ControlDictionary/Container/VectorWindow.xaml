<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Container="clr-namespace:CBHK.CustomControl.Container"
    xmlns:VectorButton="clr-namespace:CBHK.CustomControl.VectorButton"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors">

    <Style x:Key="{x:Type Container:VectorWindow}" TargetType="{x:Type Container:VectorWindow}">
        <Setter Property="AllowsTransparency" Value="False" />
        <Setter Property="ResizeMode" Value="CanResize" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <!--  {Binding TitleBarHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Container:VectorWindow}}  -->
                <WindowChrome
                    CaptionHeight="{Binding TitleBarHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Container:VectorWindow}}"
                    GlassFrameThickness="-1"
                    NonClientFrameEdges="None"
                    UseAeroCaptionButtons="False" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Container:VectorWindow}">
                    <AdornerDecorator>
                        <Grid Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <ContentPresenter x:Name="MainContent" Grid.Row="1" />
                            <!--  #2D2D30  -->
                            <Border
                                x:Name="CustomTitleBar"
                                Grid.Row="0"
                                Height="{TemplateBinding TitleBarHeight}"
                                VerticalAlignment="Top"
                                Background="Transparent">
                                <Grid Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel
                                        Grid.Column="0"
                                        Background="Transparent"
                                        Orientation="Horizontal">
                                        <Image Margin="{TemplateBinding IconMargin}" Source="{TemplateBinding Icon}" />
                                        <TextBlock
                                            Margin="10,0"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="{TemplateBinding Title}" />
                                    </StackPanel>
                                    <StackPanel
                                        x:Name="SystemButtonsArea"
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        Background="Transparent"
                                        Orientation="Horizontal">
                                        <VectorButton:VectorSolidIconButton
                                            Width="{TemplateBinding TitleButtonWidth}"
                                            Height="{TemplateBinding TitleBarHeight}"
                                            Command="{TemplateBinding MinimizeWindowCommand}"
                                            Style="{DynamicResource VectorSolidIconButtonStyle}"
                                            WindowChrome.IsHitTestVisibleInChrome="True">
                                            <Line
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Stroke="White"
                                                StrokeThickness="1"
                                                X1="0"
                                                X2="10"
                                                Y1="0"
                                                Y2="0" />
                                        </VectorButton:VectorSolidIconButton>
                                        <VectorButton:VectorSolidIconButton
                                            Width="{TemplateBinding TitleButtonWidth}"
                                            Height="{TemplateBinding TitleBarHeight}"
                                            Command="{TemplateBinding MaximizeWindowCommand}"
                                            DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                            IconMargin="13"
                                            ImageData="{TemplateBinding MaximizeButtonPathData}"
                                            ImageFillColorBrush="{TemplateBinding RestorePathFillBrush}"
                                            ImageStrokeColorBrush="White"
                                            Style="{DynamicResource VectorSolidIconButtonStyle}"
                                            WindowChrome.IsHitTestVisibleInChrome="True">
                                            <behavior:Interaction.Triggers>
                                                <behavior:EventTrigger EventName="Loaded">
                                                    <behavior:CallMethodAction MethodName="MaximizeButton_Loaded" TargetObject="{Binding}" />
                                                </behavior:EventTrigger>
                                            </behavior:Interaction.Triggers>
                                        </VectorButton:VectorSolidIconButton>
                                        <VectorButton:VectorSolidIconButton
                                            Width="{TemplateBinding TitleButtonWidth}"
                                            Height="{TemplateBinding TitleBarHeight}"
                                            Command="{TemplateBinding CloseWindowCommand}"
                                            IconMargin="13"
                                            ImageData="{DynamicResource CloseMark}"
                                            ImageFillColorBrush="White"
                                            Style="{DynamicResource VectorSolidIconButtonStyle}"
                                            WindowChrome.IsHitTestVisibleInChrome="True" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </AdornerDecorator>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="WindowState" Value="Maximized">
                <Setter Property="Padding" Value="8" />
            </Trigger>
            <Trigger Property="WindowState" Value="Normal">
                <Setter Property="Padding" Value="0" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>