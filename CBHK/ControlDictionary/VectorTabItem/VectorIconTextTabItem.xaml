<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControl="clr-namespace:CBHK.CustomControl.VectorTabItem">

    <Style x:Key="VectorIconTextTabItem" TargetType="{x:Type CustomControl:VectorIconTextTabItem}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="Background" Value="#312D2C" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CustomControl:VectorIconTextTabItem}">
                    <Grid
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        Background="{TemplateBinding Background}"
                        SnapsToDevicePixels="true">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2" />
                        </Grid.ColumnDefinitions>
                        <Rectangle
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="2.5"
                            Margin="0,12,0,12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"
                            Panel.ZIndex="1"
                            Fill="{TemplateBinding SelectedMarkerBrush}"
                            Stretch="Fill"
                            Visibility="{TemplateBinding SelectedMarkerVisibility}" />
                        <Path
                            Grid.Row="0"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Panel.ZIndex="1"
                            Data="M0,1 L1,1 L0,0 Z"
                            Fill="{TemplateBinding RightBottomBorderBrush}"
                            RenderTransformOrigin="0.5 0.5"
                            SnapsToDevicePixels="True"
                            Stretch="Uniform"
                            StrokeThickness="0">
                            <Path.RenderTransform>
                                <RotateTransform Angle="-90" />
                            </Path.RenderTransform>
                        </Path>
                        <Path
                            Grid.Row="2"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"
                            Panel.ZIndex="1"
                            Data="M0,1 L1,1 L0,0 Z"
                            Fill="{TemplateBinding RightBottomBorderBrush}"
                            RenderTransformOrigin="0.5 0.5"
                            SnapsToDevicePixels="True"
                            Stretch="Uniform"
                            StrokeThickness="0">
                            <Path.RenderTransform>
                                <RotateTransform Angle="-90" />
                            </Path.RenderTransform>
                        </Path>
                        <Rectangle
                            Grid.Row="0"
                            Grid.ColumnSpan="3"
                            Panel.ZIndex="0"
                            Fill="{TemplateBinding LeftTopBorderBrush}"
                            StrokeThickness="0" />
                        <Rectangle
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Panel.ZIndex="0"
                            Fill="{TemplateBinding LeftTopBorderBrush}"
                            StrokeThickness="0" />
                        <Rectangle
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            Panel.ZIndex="0"
                            Fill="{TemplateBinding RightBottomBorderBrush}"
                            StrokeThickness="0" />
                        <Rectangle
                            Grid.Row="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Panel.ZIndex="0"
                            Fill="{TemplateBinding RightBottomBorderBrush}"
                            StrokeThickness="0" />
                        <Grid
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Panel.ZIndex="0"
                            Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Margin="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="NearestNeighbor"
                                RenderOptions.ClearTypeHint="Enabled"
                                SnapsToDevicePixels="True"
                                Source="{TemplateBinding HeaderImage}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="0,5,5,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{TemplateBinding HeaderText}" />
                        </Grid>
                        <ContentPresenter
                            x:Name="contentPresenter"
                            Grid.RowSpan="3"
                            Grid.ColumnSpan="3"
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                            VerticalAlignment="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                            ContentSource="Header"
                            Focusable="False"
                            RecognizesAccessKey="True"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>