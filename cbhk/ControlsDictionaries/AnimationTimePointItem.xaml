<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControls="clr-namespace:CBHK.CustomControls">
    <Style TargetType="{x:Type CustomControls:AnimationTimePointItem}">
        <Style.Setters>
            <Setter Property="SelectedColor" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CustomControls:AnimationTimePointItem}">
                        <Polygon
                            Panel.ZIndex="1"
                            Fill="{TemplateBinding SelectedColor}"
                            Points="15 10 20 15 15 20 10 15"
                            Stroke="Transparent"
                            StrokeThickness="2">
                            <Polygon.RenderTransform>
                                <TranslateTransform X="{Binding Offset, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                            </Polygon.RenderTransform>
                        </Polygon>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="SelectedColor" Value="Orange" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>