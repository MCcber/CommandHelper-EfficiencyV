                </MenuItem>
                <MenuItem
                    Uid="oak"
                    Background="Transparent"
                    Foreground="White"
                    Header="清空告示牌">
                    <behavior:Interaction.Triggers>
                        <behavior:EventTrigger EventName="Loaded">
                            <behavior:CallMethodAction MethodName="AddSignMenuIconLoaded" TargetObject="{Binding}" />
                        </behavior:EventTrigger>
                    </behavior:Interaction.Triggers>
                    <MenuItem
                        Background="#424242"
                        Command="{Binding ClearSigns}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                        Foreground="White"
                        Header="全部" />
                    <MenuItem
                        Uid="oak"
                        Background="#424242"
                        Command="{Binding ClearSign}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                        Foreground="White"
                        Header="橡木">
