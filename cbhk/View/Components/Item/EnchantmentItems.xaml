<UserControl
    x:Class="CBHK.Generators.ItemGenerator.Components.EnchantmentItems"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControls="clr-namespace:CBHK.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CBHK.Generators.ItemGenerator.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ImageBrush x:Key="ButtonNormal" ImageSource="/CBHK;component/Resource/Common/Image/ButtonNormal.png" />
        <ImageBrush x:Key="ButtonPressed" ImageSource="/CBHK;component/Resource/Common/Image/ButtonPressed.png" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            Margin="5,0"
            VerticalAlignment="Center"
            Foreground="White"
            Text="附魔ID" />
        <ComboBox
            x:Name="ID"
            Grid.Column="1"
            Height="25"
            VerticalContentAlignment="Center"
            Loaded="EnchantmentIdLoaded"
            SelectedIndex="0"
            SelectionChanged="EnchantmentID_SelectionChanged"
            Style="{DynamicResource TextComboBoxStyle}" />
        <TextBlock
            Grid.Column="2"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Foreground="White"
            Text="附魔等级" />
        <Slider
            x:Name="Level"
            Grid.Column="3"
            Height="25"
            Background="Transparent"
            BorderThickness="0"
            Foreground="White"
            Maximum="32767"
            Minimum="0"
            Style="{DynamicResource NumberBoxStyle}" />
        <CustomControls:IconTextButtons
            Grid.Column="4"
            Width="25"
            Height="25"
            HorizontalAlignment="Left"
            Background="{StaticResource CloseButtonNormal}"
            Click="Delete_Click"
            FontSize="30"
            Foreground="Black"
            PressedBackground="{StaticResource CloseButtonHightLight}"
            Style="{DynamicResource IconTextButton}" />
    </Grid>
</UserControl>
