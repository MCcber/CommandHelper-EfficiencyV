<Window
    x:Class="CBHK.View.Common.NoticeToUsersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControls="clr-namespace:CBHK.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="用户须知"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="#2F2F2F"
    ResizeMode="NoResize"
    WindowChrome.WindowChrome="{DynamicResource WindowChromeKey}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <ImageBrush x:Key="ButtonNormal" ImageSource="/CBHK;component/Resource/Common/Image/ButtonNormal.png" />
        <ImageBrush x:Key="ButtonPressed" ImageSource="/CBHK;component/Resource/Common/Image/ButtonPressed.png" />
        <!--  窗体标题栏无白条  -->
        <WindowChrome
            x:Key="WindowChromeKey"
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0">
            <WindowChrome.ResizeBorderThickness>
                <Thickness>0</Thickness>
            </WindowChrome.ResizeBorderThickness>
        </WindowChrome>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <RichTextBox
            Grid.Row="0"
            Background="Transparent"
            BorderThickness="0"
            Foreground="White"
            IsHitTestVisible="False"
            IsReadOnly="True"
            IsReadOnlyCaretVisible="False">
            <FlowDocument>
                <Paragraph
                    Margin="0,10,0,0"
                    FontSize="50"
                    FontWeight="Bold"
                    TextAlignment="Center">
                    <Run Text="本应用适用人群" />
                </Paragraph>
                <Paragraph
                    Margin="10,0,0,0"
                    FontSize="45"
                    TextAlignment="Left">
                    <Run Text="1.有基本编程能力" />
                </Paragraph>
                <Paragraph
                    Margin="10,0,0,0"
                    FontSize="45"
                    TextAlignment="Left">
                    <Run Text="2.对Minecraft原版技术体系有相对完整认知" />
                </Paragraph>
                <Paragraph
                    Margin="10,0,0,0"
                    FontSize="45"
                    TextAlignment="Left">
                    <Run Text="3.设备的系统为win10或更新" />
                </Paragraph>
                <Paragraph
                    Margin="10,0,0,0"
                    FontSize="45"
                    TextAlignment="Left">
                    <Run Text="4.上述1~3项需满足任意两项或全部" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <DockPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            LastChildFill="False">
            <CustomControls:TextCheckBoxs
                Grid.Row="1"
                Height="25"
                Margin="0,0,10,10"
                Background="{StaticResource ButtonNormal}"
                Foreground="White"
                HeaderHeight="20"
                HeaderText="下次不再显示本窗体"
                HeaderWidth="20"
                IsChecked="{Binding DonotShowNextTime}"
                Style="{DynamicResource TextCheckBox}" />
            <TextBlock
                x:Name="browseTimeBlock"
                Margin="0,0,10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="White"
                Text="{Binding BrowseTimeBlockText}" />
            <CustomControls:TextButtons
                x:Name="understandButton"
                Grid.Row="1"
                Width="45"
                Height="25"
                Margin="0,0,10,10"
                Background="{StaticResource ButtonNormal}"
                Command="{Binding UnderStandCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                Content="已了解"
                IsEnabled="{Binding UnderstandButtonEnable}"
                MouseLeftDownBackground="{StaticResource ButtonPressed}"
                MouseOverBackground="{StaticResource ButtonNormal}"
                Style="{DynamicResource TextButtonsStyle}" />
        </DockPanel>
    </Grid>
</Window>
